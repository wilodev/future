{
  "name": "futurelearnmobile",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android --variant devDebug --appId com.futurelearn.mobile.dev",
    "android:local": "yarn android && yarn android:adb_reverse",
    "android:emulator:create": "./scripts/create-android-emulator.sh",
    "android:emulator:boot": "emulator @emu &",
    "android:adb_reverse": "yarn android:adb_reverse:metro && yarn android:adb_reverse:rails && yarn android:adb_reverse:detox",
    "android:adb_reverse:metro": "adb reverse tcp:8081 tcp:8081",
    "android:adb_reverse:rails": "adb reverse tcp:3000 tcp:3000",
    "android:adb_reverse:detox": "PORT=$(grep 'LOCAL_SERVER_GRAPHQL_API_PORT' .env.e2e | cut -d '=' -f 2-) && adb reverse tcp:$PORT tcp:$PORT",
    "android:send_text": "./scripts/send-text-android.sh $1",
    "ios": "react-native run-ios",
    "start": "yarn react-native start",
    "dev": "concurrently \"yarn start\" \"yarn codegen:watch\"",
    "test": "jest",
    "eslint": "eslint --ext js --ext jsx --ext ts --ext tsx .",
    "tsc": "tsc",
    "detox:ios": "yarn detox:ios:build && yarn detox:ios:run",
    "detox:ios:build": "detox build --configuration \"ios:release\"",
    "detox:ios:run": "detox test --retries 5 --configuration \"ios:release\" --artifacts-location e2e/artifacts",
    "detox:ios:ci:run": "yarn detox:ios:run --cleanup",
    "detox:ios:debug": "yarn detox:ios:debug:build && yarn detox:ios:debug:run",
    "detox:ios:debug:build": "detox build --configuration \"ios:debug\"",
    "detox:ios:debug:run": "detox test --retries 5 --configuration \"ios:debug\" --artifacts-location e2e/artifacts",
    "detox:android": "yarn detox:android:build && yarn detox:android:run",
    "detox:android:build": "detox build --configuration \"android:release\" --artifacts-location e2e/artifacts",
    "detox:android:run": "detox test --retries 5 --configuration \"android:release\"",
    "detox:android:debug": "yarn detox:android:debug:build && yarn detox:android:debug:run",
    "detox:android:debug:build": "detox build --configuration \"android:debug\"",
    "detox:android:debug:run": "detox test --retries 5 --configuration \"android:debug\" --artifacts-location e2e/artifacts",
    "detox:android:ci:run": "yarn detox:android:run --gpu auto --headless",
    "codegen:schema": "graphql-codegen --config codegen.schema.yml",
    "codegen:main": "graphql-codegen --config codegen.main.yml",
    "codegen:watch": "yarn codegen:main --watch",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@apollo/client": "^3.8.1",
    "@gorhom/bottom-sheet": "^4.4.7",
    "@notifee/react-native": "^7.8.0",
    "@parcel/watcher": "^2.3.0",
    "@react-native-async-storage/async-storage": "^1.19.2",
    "@react-native-community/blur": "^4.3.2",
    "@react-native-community/checkbox": "^0.5.16",
    "@react-native-community/datetimepicker": "^7.4.1",
    "@react-native-community/masked-view": "^0.1.11",
    "@react-native-firebase/app": "^18.3.0",
    "@react-native-firebase/crashlytics": "^18.3.0",
    "@react-navigation/native": "^6.1.7",
    "@react-navigation/native-stack": "^6.9.13",
    "@react-navigation/stack": "^6.3.17",
    "expo": "^49.0.7",
    "expo-haptics": "~12.4.0",
    "expo-modules-core": "^1.5.9",
    "expo-secure-store": "~12.3.1",
    "graphql": "^16.7.1",
    "intl": "^1.2.5",
    "jail-monkey": "^2.8.0",
    "lottie-ios": "3.2.3",
    "lottie-react-native": "5.1.1",
    "mixpanel-react-native": "^2.3.1",
    "patch-package": "^8.0.0",
    "pod-install": "^0.1.39",
    "postinstall-postinstall": "^2.1.0",
    "react": "18.2.0",
    "react-hook-form": "^7.45.4",
    "react-native": "0.72.4",
    "react-native-config": "^1.5.1",
    "react-native-device-info": "^10.8.0",
    "react-native-error-boundary": "^1.2.3",
    "react-native-gesture-handler": "^2.12.1",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-launch-arguments": "^4.0.1",
    "react-native-lottie-splash-screen": "^0.1.14",
    "react-native-mathjax-svg": "^0.9.9",
    "react-native-raw-bottom-sheet": "^2.2.0",
    "react-native-reanimated": "^3.4.2",
    "react-native-render-html": "^6.3.4",
    "react-native-root-siblings": "^4.1.1",
    "react-native-root-toast": "^3.4.1",
    "react-native-safe-area-context": "^4.7.1",
    "react-native-screens": "^3.24.0",
    "react-native-sound": "^0.11.2",
    "react-native-status-bar-height": "^2.6.0",
    "react-native-svg": "^13.11.0",
    "react-native-syntax-highlighter": "^2.1.0",
    "react-native-video": "^5.2.1",
    "react-native-webview": "^13.3.1",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@babel/core": "~7.22.10",
    "@babel/plugin-transform-private-methods": "^7.22.5",
    "@babel/runtime": "~7.22.10",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/fragment-matcher": "^5.0.0",
