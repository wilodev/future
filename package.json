    "dotenv": "^16.3.1",
    "eslint": "^8.47.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "express": "^4.18.2",
    "jest": "^29.6.2",
    "jest-circus": "^29.6.2",
    "jest-expo": "~49.0.0",
    "jest-fetch-mock": "^3.0.3",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.0.2",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.1.6"
  },
  "expo": {
    "autolinking": {
      "exclude": [
        "expo-application",
        "expo-asset",
        "expo-constants",
        "expo-file-system",
        "expo-font",
        "expo-keep-awake"
      ]
    }
  },
  "private": true,
  "engines": {
    "node": ">=18"
  }
}
